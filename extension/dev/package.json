{
  "name": "dev",
  "displayName": "Agility AI Companion",
  "description": "Tracks workspace changes and streams AI code review summaries to Agility Scrum dashboards.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:agilityAI.setActiveTask",
    "onCommand:agilityAI.sendSnapshot",
    "onCommand:agilityAI.toggleAutoTracking"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Agility AI Companion",
      "properties": {
        "agilityAI.apiBaseUrl": {
          "type": "string",
          "description": "Base URL for the Agility AI review microservice.",
          "default": "http://localhost:8002"
        },
        "agilityAI.apiToken": {
          "type": "string",
          "markdownDescription": "Bearer token used to authenticate with the Agility AI review microservice. Leave blank to disable authentication.",
          "default": ""
        },
        "agilityAI.defaultTaskId": {
          "type": "string",
          "description": "Fallback task identifier used when no task is explicitly selected.",
          "default": ""
        },
        "agilityAI.developerId": {
          "type": "string",
          "description": "Unique identifier of the signed-in developer in Agility.",
          "default": ""
        },
        "agilityAI.autoTrack": {
          "type": "boolean",
          "description": "Automatically send snapshots for relevant files after each save.",
          "default": true
        },
        "agilityAI.languages": {
          "type": "array",
          "description": "Language IDs that should trigger AI review snapshots.",
          "items": {
            "type": "string"
          },
          "default": [
            "typescript",
            "javascript",
            "typescriptreact",
            "javascriptreact",
            "python",
            "go",
            "java"
          ]
        }
      }
    },
    "commands": [
      {
        "command": "agilityAI.setActiveTask",
        "title": "Agility AI: Set Active Task",
        "category": "Agility AI"
      },
      {
        "command": "agilityAI.sendSnapshot",
        "title": "Agility AI: Send Snapshot",
        "category": "Agility AI"
      },
      {
        "command": "agilityAI.toggleAutoTracking",
        "title": "Agility AI: Toggle Auto Tracking",
        "category": "Agility AI"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "esbuild": "^0.25.10",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
